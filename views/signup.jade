doctype html
html
	head
		title Signup
		link(rel='stylesheet', href='/styles/bootstrap/bootstrap.css')
		link(rel='stylesheet', href='/styles/main.css')

	body
		div(class = 'login-container col-sm-4 col-sm-offset-4 col-xs-10 col-xs-offset-1')
			h1 Signup

			if (message.length > 0)
				p(class = 'alert alert-danger')= message
			form(action = '/auth/signup' method = 'post' class = 'form-horizontal')
				div(class = 'form-group')
					label Name
					input(type = "text" class = "form-control" name="username")
				div(class = 'form-group')
					label Email / Username
					input(type = "text" class = "form-control" name="email")
				div(class = 'form-group')
					label Password
					input(type = "text" class = "form-control" name="password")
				div(class = 'button form-group')
					button(type = 'submit' class='btn btn-success') Sign Up
